@model List<Testimonial>
<div class="site-section bg-light">
    <div class="container">
        <div class="row justify-content-center text-center mb-5 section-2-title">
            <div class="col-md-6">
                <span class="text-primary">Takım Arkadaşlarımız</span>
                <h2 class="mb-4">Ekibimizle Tanışın !</h2>
                <p>Alanlarında Donanımlı Arkadaşlarımızı Yakından Tanıyın</p>
            </div>
        </div>
        <div class="row align-items-stretch">
            @foreach(var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-5">
                    <div class="post-entry-1 h-100 person-1">

                        <img style="width:90px;height:90px" src="@item.imageUrl" alt="Image"
                            >

                        <div class="post-entry-1-contents">
                            <span class="meta">@item.title</span>
                            <h2>@item.nameSurname</h2>
                            <p>@item.descreption</p>
                        </div>
                    </div>
                </div>
            }
      
           


        </div>
    </div>
</div>
@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Takım Arkadaşları</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ünvan</th>
        <th>İsim Soyisim</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.testimonialID</td>
            <td> <img src="@item.imageUrl" style="width:100px;height:75px;border-radius:50%" /></td>
            <td>@item.title</td>
            <td>@item.nameSurname</td>
            <td><a href="/Testimonial/DeleteTestimonial/@item.testimonialID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.testimonialID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Testimonial/CreateTestimonial" class="btn btn-outline-primary"> Referans Girişi</a>


@model X.PagedList.IPagedList<Car>
@* @using X.PagedList.Mvc.Core.Common *@
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "carList";
    Layout = "~/Views/UILayout/Index.cshtml";
}
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="item-1">
                        <a href="#"><img src="@item.imageUrl" alt="Image" class="img-fluid" style="height:200px;width:350px"></a>
                        <div class="item-1-contents">
                            <div class="text-center">
                                <h3><a href="#">@item.brand.brandName @item.model</a></h3>
                                <div class="rating">
                                    <span class="icon-star text-warning"></span>
                                    <span class="icon-star text-warning"></span>
                                    <span class="icon-star text-warning"></span>
                                    <span class="icon-star text-warning"></span>
                                    <span class="icon-star text-warning"></span>
                                </div>
                                <div class="rent-price"><span>1000tl/</span>gün</div>
                            </div>
                            <ul class="specs">
                                <li>
                                    <span>Model Yılı</span>
                                    <span class="spec">@item.year</span>
                                </li>
                                <li>
                                    <span>Kişi Sayısı</span>
                                    <span class="spec">@item.personCount</span>
                                </li>
                                <li>
                                    <span>Vites türü</span>
                                    <span class="spec">@item.gearType</span>
                                </li>
                                <li>
                                    <span>Kilometre</span>
                                    <span class="spec">@item.KM</span>
                                </li>
                            </ul>
                            <div class="d-flex action">
                                <a href="contact.html" class="btn btn-primary">Hemen Kirala </a>
                                <a href="/Car/CarDetail/@item.carID" class="btn btn-warning" style="margin-left:10px">Araç Detayları </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-12">
            @Html.PagedListPager(Model, page => Url.Action("CarList", new { page }))

        </div>
    </div>
</div>


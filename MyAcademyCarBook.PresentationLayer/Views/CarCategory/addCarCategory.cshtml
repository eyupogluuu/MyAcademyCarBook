@model CarCategory
@{
    ViewData["Title"] = "addCarCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Yeni Kategori Girişi</h3> <br />

<form method="post">
    <label>Kategori Adı:</label>
    <input type="text" style="border:2px solid #2222" asp-for="carcategoryName" class="form-control" />
    <br />
    <label>Kategori Açıklaması:</label>
    <input type="text" style="border:2px solid #2222" asp-for="descreption" class="form-control" />
    <br />
    <label>Kategori Durumu</label>
    <select asp-for="cateStatus" class="form-control" style="border:2px solid #2222">
        <option value="True">Aktif</option>
        <option value="False">Pasif</option>
    </select>
    <br />
    <button class="btn btn-primary">Kategoriyi Kaydet</button>

</form>


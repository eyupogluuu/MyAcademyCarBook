@model About
@{
    ViewData["Title"] = "addAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni Hakkında Girişi</h1>

<form method="post">
    <br />
    <label>Başlık:</label>
    <input type="text" asp-for="title" class="form-control" style="border:1px solid #2222 " />
    <br />
    <label>Aciklama</label>
    <input type="text" asp-for="description" class="form-control" style="border:1px solid #2222" />
    <br />
    <button class="btn btn-primary">Yeni Giriş Ekle</button>
</form>

